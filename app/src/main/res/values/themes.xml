<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyPlacesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/baby_blue</item>
        <item name="colorOnPrimary">@color/blue_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_blue</item>
        <item name="colorSecondaryVariant">@color/baby_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme_NoBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/baby_blue</item>
        <item name="colorOnPrimary">@color/blue_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_blue</item>
        <item name="colorSecondaryVariant">@color/baby_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>
    <style name="Theme_Toolbar">
        <item name = "android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>